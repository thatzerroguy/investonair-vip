generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model reminders {
  id               String   @id @default(uuid())
  name             String
  phone            String
  date             String
  time             String
  sentConfirmation Boolean
  sentReminder     Boolean
  createdAt        DateTime @default(now())
}
